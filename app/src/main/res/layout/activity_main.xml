<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="none">

	<!--最外层的布局，不参与具体的功能-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<!--选择数据的布局-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:background="@drawable/linearlayout_bg"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					style="@style/TextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/baiwei"/>

				<EditText
					android:id="@+id/edit_baiwei"
					style="@style/EditView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/baiwei"
					android:maxLength="10"
					android:text="123"
					android:numeric="integer"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					style="@style/TextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/baiwei"/>

				<EditText
					android:id="@+id/edit_shiwei"
					style="@style/EditView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/shiwei"
					android:maxLength="10"
					android:text="258"
					android:numeric="integer"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					style="@style/TextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/baiwei"/>

				<EditText
					android:id="@+id/edit_gewei"
					style="@style/EditView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/gewei"
					android:maxLength="10"
					android:text="369"
					android:numeric="integer"/>

			</LinearLayout>

			<Button
				android:id="@+id/btn_createdata"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="生成数据"/>

		</LinearLayout>

		<!--第三层选项-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal"
			>

			<TextView
				android:id="@+id/tv_kuadu"
				style="@style/TextView"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:hint="跨度"
				/>

			<Button
				android:id="@+id/btn_kuadu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="跨度设置"

				/>

		</LinearLayout>

		<!--第一层选项-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>

			<TextView
				style="@style/TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="奇偶:"
				/>

			<Spinner
				android:id="@+id/sp_jiou"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				style="@style/TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="质合:"
				/>

			<Spinner
				android:id="@+id/sp_zhihe"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				style="@style/TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="012:"
				/>

			<Spinner
				android:id="@+id/sp_012"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		</LinearLayout>

		<!--第二层选项-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal"
			>

			<TextView
				style="@style/TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="和值:"
				/>

			<Spinner
				android:id="@+id/sp_total"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				style="@style/TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="大小:"
				/>

			<Spinner
				android:id="@+id/sp_daxiao"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				style="@style/TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="合值:"
				/>

			<Spinner
				android:id="@+id/sp_hezhi"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		</LinearLayout>



	</LinearLayout>

</ScrollView>
