                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select_style"
                android:text="奇偶奇"
                />

            <Button
                android:id="@+id/btn_joo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select_style"
                android:text="奇偶偶"
                />

            <Button
                android:id="@+id/btn_ooo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select_style"
                android:text="偶偶偶"
                />

            <Button
                android:id="@+id/btn_ojj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select_style"
                android:text="偶奇奇"
                />

            <Button
                android:id="@+id/btn_ojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select_style"
