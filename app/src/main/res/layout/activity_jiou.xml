                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select_style"
                android:text="奇奇奇"
                />

            <Button
                android:id="@+id/btn_jjo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select_style"
                android:text="奇奇偶"
                />

            <Button
                android:id="@+id/btn_joj"
